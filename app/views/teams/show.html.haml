.container-fluid
  .row-fluid
    .span10
      .hero-unit
        %h1
          = @team.name
        %h4
          - @team.users.each do |u|
            = u.name
            %br
      = link_to 'Join', join_team_path(@team), {:class=>'btn btn-primary btn-large'} unless current_user.team == @team || current_user.on_team?
      - if current_user.team == @team
        = link_to 'Leave', leave_team_path(@team), {:class=>'btn btn-danger btn-large'}
